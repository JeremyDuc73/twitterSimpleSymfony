{% extends 'base.html.twig' %}

{% block title %}Hello PostController!{% endblock %}

{% block body %}
    <h1 class="mt-3">Voici tous les posts</h1>
    {% for post in posts %}
        <div class="container mb-4 p-2 border border-light">
            <h3>{{ post.title }}</h3>
            <img width="100px" src="{{ vich_uploader_asset(post.image,'imageFile') }}">
            <p>{{ post.content }}</p>
            <p><strong>{{ post.createdAt|date('d/m/y - H:i') }}</strong></p>
            <p><strong>Rédigé par {{ post.author.username }}</strong></p>
            <a href="{{ path('show_post', {id:post.id}) }}" class="btn btn-light">VOIR LE POST</a>
        </div>
    {% endfor %}
{% endblock %}